<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="org.patientview.repository.radar,service"/>

    <!--Imports-->
    <import resource="context-repository.xml"/>
    <import resource="context-security-radar.xml"/>
    <import resource="context-service.xml"/>
    <import resource="context-smtp.xml"/>


    <!--Properties Placeholder-->
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:test.properties</value>
            </list>
        </property>
    </bean>

    <bean id="radarApplication" class="org.patientview.repository.radar.web.RadarApplication">
        <property name="ajaxDebug" value="${ajax.debug}"/>
    </bean>

</beans>